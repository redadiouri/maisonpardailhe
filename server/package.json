{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "prepare": "husky install",
    "start": "node server.js",
    "dev": "node server.js | npx pino-pretty",
    "migrate:latest": "npx knex --knexfile ./knexfile.js migrate:latest",
    "migrate:make": "npx knex --knexfile ./knexfile.js migrate:make",
    "migrate:rollback": "npx knex --knexfile ./knexfile.js migrate:rollback",
    "db:backup": "node scripts/db_backup.js",
    "db:backup:docker": "pwsh scripts/db_backup_docker.ps1",
    "db:restore:docker": "pwsh scripts/db_restore_docker.ps1",
    "db:restore:docker:latest": "pwsh scripts/db_restore_docker.ps1 latest",
    "images:optimize": "node scripts/images_optimize.js",
    "favicon:create": "node scripts/create_favicon.js && node scripts/create_favicon_ico.js",
    "css:minify": "npx cleancss -o ../maisonpardailhe/css/style.min.css ../maisonpardailhe/css/style.css && npx cleancss -o ../maisonpardailhe/css/datepicker.min.css ../maisonpardailhe/css/datepicker.css && npx cleancss -o ../maisonpardailhe/admin/css/admin-clean.min.css ../maisonpardailhe/admin/css/admin-clean.css",
    "build": "npm run images:optimize && npm run css:minify",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:load": "node scripts/benchmark-load.js",
    "benchmark:api": "node scripts/benchmark-api.js",
    "benchmark:all": "npm run benchmark && npm run benchmark:api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mysql-session": "^2.1.7",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.2",
    "express-slow-down": "^1.0.0",
    "express-validator": "^7.3.0",
    "helmet": "^6.0.1",
    "joi": "^18.0.1",
    "knex": "^2.5.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.32.4"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "lint-staged": {
    "server/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
